@import '../../styles/base'

.header-main
  +breakpoint("desktop")
    &.is-featured
      .header.theme-dark
        padding-top 52px

  p
    font-size 14px

.header
  background-color white
  border-bottom 1px solid rgba(black, 0.1)
  text-align left

  &.theme-dark
    +breakpoint("desktop")
      background-color transparent
      border-bottom 1px solid rgba(white, 0.1)
      left 0
      position absolute
      top 0
      width 100%
      z-index 999

  &.theme-gray
    background #f5f7f9
    border-bottom 1px solid rgba(0, 0, 0, .05)

  &.is-dropdown-open
    +breakpoint("desktop", "max")
      height 70px

.menu.is-dropdown-open
  +breakpoint("desktop", "max")
    background-color white
    bottom 0
    left 0
    position fixed
    right 0
    top 0
    z-index 9100

.collapse
  clearfix()

  +breakpoint("desktop", "max")
    display none

  &.is-dropdown-open
    +breakpoint("desktop", "max")
      -webkit-overflow-scrolling touch
      display block
      height calc(100vh - 70px)
      overflow-y scroll
      margin 0 -15px

.main-navigation
  +breakpoint("desktop")
    float left
    width calc(100% - 266px)

.navigation
  list-style-type none
  margin 0
  padding 0

  > li:last-child
    display none

  +breakpoint("desktop")

    text-align center

    > li:last-child
      display inline-block
      margin-left 15px

      a[class$="talk-button"],
      button[class$="talk-button"]
        font-size 14px
        color #242424
        text-transform none
        font-weight normal
        letter-spacing normal

        &:hover
          color black

    > li[class$="theme-dark"]:last-child
      a[class$="talk-button"],
      button[class$="talk-button"]
        color #BFBFBF

        &:hover
          color #EEE

.navigation
  clearfix()
  position relative

  +breakpoint("desktop")
    vertical-center-elem(32px, $navbar-desktop-height)

.buttons-group
  clearfix()
  position relative

  +breakpoint("desktop")
    vertical-center-elem(32px, $navbar-desktop-height)

.buttons-group

  +breakpoint("desktop")
    float right

  +breakpoint("desktop", "max")
    background-color #F2F2F2
    padding 20px 20px
    text-align center

  // Style .btn.btn-transparent on mobile always on his standard version ignoring .theme-dark style
  :global .btn.btn-transparent
    +breakpoint("desktop", "max")
      background-color rgba(0, 0, 0, 0) !important
      border-color rgba(0, 0, 0, 0) !important
      box-shadow inset 0 0 0 1px rgba(0, 0, 0, .2) !important
      color #333 !important

    &:hover
      +breakpoint("desktop", "max")
        color #333 !important
        background-color rgba(0, 0, 0, 0) !important
        border-color transparent !important

  :global .btn
    font-size 11px
    padding 8px 18px

   :global .btn + .btn
     margin-left 18px

.header :global(.container)
  width auto

.header :focus
  outline none

.header.focusable :focus
  outline thin dotted !important

.overflow
  height 100%
  overflow hidden !important
  position fixed
  width 100%

.login-button
  color rgba(0, 0, 0, .86)
  opacity 0.7
  margin-left 0
  margin-right 3px
  padding 2px 18px
  font-size 14px
  text-transform none
  letter-spacing normal
  font-weight normal
  text-rendering geometricPrecision
  overflow hidden
  border 0
  background-color transparent
  display inline-block

  +breakpoint("desktop", "max")
    width calc(50% - 5px)
    font-size 12px
    color rgba(#333, .87)
    text-transform uppercase
    opacity 1
    box-shadow inset 0 0 0 1px rgba(black, .2)
    border-radius 3px
    margin 0
    margin-right 5px
    padding 15px 0
    line-height 1.5
    letter-spacing 1px
    font-weight 500

.login-button:hover
  color #000

.login-button--dark
.login-button--dark:hover
  +breakpoint("desktop")
    color #fff

button[class$="signup-button"]
  vertical-align top

  +breakpoint("desktop", "max")
    width calc(50% - 5px)
    font-size 12px !important
    padding 15px 0 !important
    line-height 1.5
    margin-left 5px

.menu-mobile
  background-color #F2F2F2
  display block
  padding 20px

  a[class$="talk-button"],
  button[class$="talk-button"]
    width 100%
    font-size 12px
    color rgba(#333, .87)
    padding 15px 0

  ul
    margin 0
    padding 20px 0
    list-style none
    clearfix()

    li
      width 50%
      float left
      margin 4px 0

      &:nth-child(even)
        padding-left 5px

      a
        color #4A4A4A
        font-size 15px
        font-weight 500

  +breakpoint("desktop")
    display none
