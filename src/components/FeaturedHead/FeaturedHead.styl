@import '../../styles/base'

.featured
  text-align center
  background-color white
  z-index 1000
  position relative

  .featured-content
    height 45px
    line-height 45px
    color rgba(black, .84)
    position relative

    a
      font-weight normal
      color rgba(black, .84)
      position relative
      padding 0 10px
      font-size 13px
      +breakpoint("desktop")
        font-size 14px

      &:after
        content ""
        width 0
        height 0
        border-style solid
        border-width 5px 0 5px 6px
        border-color transparent transparent transparent #eb5224
        position absolute
        top 50%
        transform translateY(-50%)
        left 100%

      &:hover
        .featured-more
          color rgba(black, .84)

    .featured-description
      color rgba(black, .64)
      font-style initial
      margin-left 4px

    .featured-more
      color black
      position relative
      font-size 13px
      margin-left 6px
      +breakpoint("desktop")
        font-size 14px

    .close-notification
      background-color transparent
      background-image url('data:image/svg+xml;base64,')
      background-repeat no-repeat
      background-position center
      width 10px
      height 10px
      border none
      padding 10px
      margin 0
      font-weight 500
      position absolute
      right 10px
      top 22px
      transform translateY(-50%)
      outline none
      box-sizing content-box

  &:not(.notificationOpen)
    .featured-content
      height 0px
      overflow hidden
      opacity 0
      transition height .5s, opacity .2s

  +breakpoint("desktop", "max")
    box-shadow inset 0 -1px 0 0 #E6E6E6

    &.dropdownOpen
      display none

    .featured-content

      .featured-title
        &:after
          content none

      .featured-description,
      .featured-more
        display none

      .featured-more
        padding-right 0

        &:after
          margin-left 10px

  &.theme-light
    background-color black

    .featured-content
      a
        color white

        &:hover
          .featured-more
            color rgba(white, .84)

      .featured-description
        color rgba(white, .64)

      .featured-more
        color white

      .close-notification
        background-image url('data:image/svg+xml;base64,')

.featured-icon
  height 12px
  position absolute
  right 100%
  top 50%
  transform translateY(-50%)
  width 12px
