@import '../../styles/base'

.item
  position relative
  
  +breakpoint("desktop")
    line-height 35px

  > a.singleItem
    font-weight 500
    color #333
    margin-bottom 15px

    .icon
      +breakpoint("desktop")
        max-width 40px
        max-height 40px

  > a[class^="solutionsItem-"]
    display block
    height 30px
    margin 10px 0 15px
    
    .icon
      vertical-align top
      max-width 100%
      top 0
      max-height 100%
      top 0
    
    .text
      margin-top 5px
      vertical-align top
  
  &:last-child
    > a[class^="solutionsItem-"]
      margin-bottom 0

  > a
    font-size 15px
    color #4A4A4A
    
    +breakpoint("desktop")
      font-size 14px
    
    .text
      position relative
      
      .itemPrefix
        position absolute
        margin-left 10px
        left 100%
        top 3px
        color #EB5424
        font-size 9px
        letter-spacing 1px
        border 1px solid #EB5424
        border-radius 3px
        padding 0 5px

    .text,
    .icon
      display inline-block
      line-height normal

    .icon
      margin-right 15px

      +breakpoint("desktop")
        max-width 20px
        max-height 20px
        position relative
        top 3px

    &:hover
      .text
        color #222

.arrowItem
  composes item

  +breakpoint("desktop")
    &:after
      content ''
      display inline-block
      position absolute
      right 0
      top 50%
      transform translateY(-50%)
      width 0
      height 0
      border-top 4px solid transparent
      border-right 4px solid transparent
      border-bottom 4px solid transparent
      border-left 4px solid rgba(black, 0.2)
      transition border 0.1s

    &:hover:after
      border-left-color black

.moreItem > a
  height 36px
  line-height 36px
