{
  "name": "header",
  "version": "1.0.0",
  "description": "Header monorepo",
  "repository": "git@github.com:auth0/header.git",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "test": "jest",
    "lint": "eslint .",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "eslint": "^4.18.0",
    "eslint-config-auth0": "^11.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.6.1",
    "husky": "^0.14.3",
    "jest": "^22.3.0",
    "lint-staged": "^6.1.1",
    "prettier": "^1.10.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --print-width 100 --write",
      "git add"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/build/**",
      "!tools/**/*.js",
      "!**/__mocks__/**",
      "!**/__tests__/**",
      "!test/**/*.js",
      "!coverage/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/__tests__/(fixtures|__mocks__)/",
      "/_(utils).js$"
    ]
  }
}
